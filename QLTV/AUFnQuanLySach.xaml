<UserControl x:Class="QLTV.AUFnQuanLySach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLTV"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="btnQuanLyTuaSach" Content="Quản Lý Tựa Sách" Margin="5" Click="btnQuanLyTuaSach_Click"/>
            <Button x:Name="btnQuanLyTacGia" Content="Quản Lý Tác Giả" Margin="5" Click="btnQuanLyTacGia_Click"/>
            <Button x:Name="btnQuanLyTheLoai" Content="Quản Lý Thể Loại" Margin="5" Click="btnQuanLyTheLoai_Click"/>
            <Button x:Name="btnQuanLySach" Content="Quản Lý Sách" Margin="5" Click="btnQuanLySach_Click"/>
        </StackPanel>

        <TabControl x:Name="tcFnQuanLySach" Grid.Row="1" SelectedIndex="0">

        </TabControl>
    </Grid>
</UserControl>
